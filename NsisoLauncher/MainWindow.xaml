<controls:MetroWindow x:Name="mainWindow" x:Class="NsisoLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControl="clr-namespace:NsisoLauncher.Controls"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        BorderBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
        Title="Nsiso Launcher" Height="445" Width="720" MinHeight="445" MinWidth="720" ShowMaxRestoreButton="False" ShowMinButton="True" Loaded="mainWindow_Loaded" Closing="mainWindow_Closing">
    <controls:MetroWindow.Background>
        <ImageBrush ImageSource="Resource/bg.png" TileMode="FlipXY" AlignmentX="Right" Stretch="UniformToFill"/>
    </controls:MetroWindow.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="mediaElement" Visibility="Hidden" LoadedBehavior="Manual" MediaEnded="mediaElement_MediaEnded" Grid.ColumnSpan="2"/>
        <Grid x:Name="userGrid" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--#region 高斯模糊效果(最底层) -->
            <Rectangle Grid.ColumnSpan="2">
                <Rectangle.Effect>
                    <BlurEffect Radius="20"/>
                </Rectangle.Effect>
                <Rectangle.Fill>
                    <VisualBrush Stretch="UniformToFill" AlignmentX="Right" >
                        <VisualBrush.Visual>
                            <Rectangle Width="{Binding ActualWidth, ElementName=mainWindow}" 
                                       Height="{Binding ActualHeight, ElementName=mainWindow}"
                                       Fill="{Binding Background, ElementName=mainWindow}"
                                       />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Fill="White" Opacity="0.2" Grid.ColumnSpan="2"/>
            <!--#endregion-->
            <Button x:Name="launchButton" Content="{DynamicResource String.Base.Launch}" Margin="10,0,10,10" Height="50" VerticalAlignment="Bottom"
                    FontSize="14" Background="#19000000" BorderBrush="White" Foreground="White" Click="launchButton_Click" Grid.ColumnSpan="2"/>

            <userControl:HeadSculControl x:Name="headScul" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="61,10,61,0" Grid.ColumnSpan="2"/>

            <ComboBox x:Name="authTypeCombobox"
                  Margin="10,120,10,0" 
                  VerticalAlignment="Top" 
                  Background="#33FFFFFF" BorderBrush="#99FFFFFF"
                  DisplayMemberPath="Name"
                  controls:TextBoxHelper.Watermark="{DynamicResource String.MainWindow.ChooseAuthType}" Grid.ColumnSpan="2" Foreground="White" FontWeight="Bold" SelectionChanged="AuthTypeCombobox_SelectionChanged"
                  />
            <ComboBox x:Name="launchVersionCombobox"
                  Margin="10,155,10,0" 
                  VerticalAlignment="Top" 
                  Background="#33FFFFFF" BorderBrush="#99FFFFFF"
                  DisplayMemberPath="ID"
                  controls:TextBoxHelper.Watermark="{DynamicResource String.MainWindow.ChooseLaunchVersion}" Grid.ColumnSpan="2" Foreground="White" FontWeight="Bold"
                  />
            <TextBox x:Name="playerNameTextBox"
                 Height="23"
                 Margin="10,190,10,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Background="#33FFFFFF" BorderBrush="#99FFFFFF"
                 controls:TextBoxHelper.Watermark="{DynamicResource String.Mainwindow.InputPlayerName}" Grid.ColumnSpan="2" Foreground="White" FontWeight="Bold"
                 />
            <PasswordBox x:Name="playerPassTextBox"
                Height="23"
                Margin="10,225,10,0"
                VerticalAlignment="Top" Background="#33FFFFFF" BorderBrush="#99FFFFFF"
                controls:TextBoxHelper.Watermark="{DynamicResource String.Mainwindow.InputPassWord}" Grid.ColumnSpan="2" RenderTransformOrigin="0.441,2.323" Foreground="White" FontWeight="Bold"
                 />
            <TextBox x:Name="playerPassTextBox_Copy"
                Height="23"
                Margin="20,256,20,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top" Background="#33FFFFFF" BorderBrush="#99FFFFFF"
                controls:TextBoxHelper.Watermark="{DynamicResource String.Mainwindow.InputPassWord}" RenderTransformOrigin="0.441,2.323" Foreground="White" FontWeight="Bold" Visibility="Hidden"
                 />

            <Button x:Name="configButton"
                    Height="30" Margin="10,0,4.4,65.2" VerticalAlignment="Bottom"
                    Background="{x:Null}" BorderBrush="White" Foreground="White" Click="configButton_Click" Content="{DynamicResource String.Base.Config}" FontSize="14"/>

            <Button x:Name="downloadButton"
                    Height="30" Margin="5.6,0,9.6,65.2" VerticalAlignment="Bottom"
                    Background="{x:Null}" BorderBrush="White" Foreground="White" Click="downloadButton_Click" Content="{DynamicResource String.Base.Download}" FontSize="14" Grid.Column="1"/>
        </Grid>
        <Button x:Name="volumeButton" Style ="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                Width="30" Height="30" Margin="0,10,225,0" VerticalAlignment="Top" HorizontalAlignment="Right"
                BorderBrush="White" Visibility="Hidden" Foreground="White" Click="volumeButton_Click" Grid.ColumnSpan="2">
        </Button>
        
        <userControl:ServerInfoControl x:Name="serverInfoControl" Height="125" Margin="10,10,118,0" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
        
        <Grid x:Name="loadingGrid" Visibility="Hidden" Grid.ColumnSpan="2">
            <Border Background="{Binding Background, ElementName=mainWindow}" >
                <Border.Effect>
                    <BlurEffect Radius="20"/>
                </Border.Effect>
            </Border>
            <controls:ProgressRing x:Name="loadingRing" Width="70" Height="70" IsActive="False"/>
            <TextBlock Text="{DynamicResource String.Mainwindow.Launching}" Height="140" TextAlignment="Center" Foreground="Gray"/>
            <TextBlock x:Name="launchInfoBlock" Height="20" TextAlignment="Right" Foreground="Gray" VerticalAlignment="Bottom" Margin="10,0"/>

        </Grid>
    </Grid>
</controls:MetroWindow>
    
 